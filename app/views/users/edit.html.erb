
<div class="container" style="padding-top:150px;">
  <div class="row col-lg-4 col-md-4">
    <h3>Edit Profile 编辑个人资料</h3>

    <%= form_for @user do |form| %>

    <div class="form-group">
      <%= form.label "Name 名字" %>
      <%= form.text_field :name, type: 'name', class:"form-control" %>
    </div>

    <div class="form-group">
     <%= form.label "Email 电子邮件" %>
     <%= form.text_field :email, type: 'email', class:"form-control"  %>
   </div>

   <%= form.submit "Update 更新", class:"btn btn-primary form-control" %><br>
   <% end %>

   <h3><%= link_to "View Profile 查看个人资料", user_path %></h3>

 </div>
</div>